---
import Badge from "@components/ui/badge.astro";
import { Picture } from "astro:assets";
import WebDesign from "../assets/services/web-design.png";
---

<div class="relative section mt-24">
  <div
    class="container flex flex-wrap lg:flex-nowrap gap-4">
    <!-- Content Section -->
    <div
      class="lg:w-6/12 w-full flex flex-col justify-center">
      <Badge color="blue" class="w-fit mb-4"
        >Our services</Badge
      >
      <h2
        class="text-2xl lg:text-3xl leading-tight font-black mb-4">
        We are a comprehensive family of creatives
      </h2>
      <p class="text-lg text-slate-600 [text-wrap:pretty]">
        We handle various areas of graphic and digital
        communication in order to offer you comprehensive
        and appropriate solutions to enhance your brand or
        product.
      </p>
    </div>
    <!-- Spacer -->
    <div class="lg:w-1/12 hidden lg:block"></div>

    <!-- Image Section -->
    <div
      class="lg:w-6/12 grid place-items-center gap-4 w-full">
      <Picture
        src={WebDesign}
        formats={["avif", "webp"]}
        alt="Web design solutions"
        loading="lazy"
      />
      <p class="font-semibold">
        Web Design and Development
      </p>
    </div>
  </div>
</div>
