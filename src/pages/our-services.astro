const customPub = {
  header: "Print is not dead!",
  category: "Custom Publishing",
  mainText:
    " A team of award-winning editorial designers and editors can be your off-site production department. ",
  grid: [
    {
      title: " Design or Redesign? ",
      text: " We can adapt to your current design or we can work on a facelift or a full-fledged re-thinking of your publications. We have the necessary skills and manpower. ",
    },
    {
