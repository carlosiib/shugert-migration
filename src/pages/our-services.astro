---
import Container from "@components/container.astro";
import Layout from "@layouts/Layout.astro";
import { Image } from "astro:assets";
import servicesImage from "/src/assets/shugert/Services_Shugert.png";
---
<Layout title="Services">
   <Container>
       <main
      class="grid lg:grid-cols-5 place-items-center relative">

      <div class="max-w-sm md:max-w-max lg:col-span-2 place-self-start mt-10">
        <hgroup>
        <h3
        class="text-sm [text-wrap:balance] text-start">
        What We Offer
        </h3>
        <h1
          class="font-bold lg:tracking-tight  lg:text-start lg:text-5xl">
          Call us a production studio with a creative drive.
        </h1>
        <h2 class="text-xl mt-4 max-w-lg  [text-wrap:balance] text-start">
          Our work focused on efficiency, consistency and quality in both deliverables and service. We can help your business achieve its goals with a no BS approach to teamwork on making those goals a reality. 
        </h2>
      </hgroup>
        </div>
      </div>
      <div class="py-3 lg:col-span-2 lg:-mr-44">
        <Image
          src={servicesImage}
          alt="Services "
          sizes="(max-width: 600px) 100vw, 50vw"
          widths={[240, 540, 720, servicesImage.width]}
          loading="eager"
          fetchpriority="high"
        />
      </div>
    </main>
    </Container>
</Layout>